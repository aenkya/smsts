{
  "name": "smsts",
  "version": "1.0.0",
  "description": "typescript implementation of sms management api",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "copy-public": "cp -r public dist",
    "start": "yarn run build && yarn run copy-public && nodemon ./dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)",
      "**/*.(test|spec).+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/index.ts"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Elbertbiggs360/smsts.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": "Bruce Bigirwenkya (brucebigirwenkya@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Elbertbiggs360/smsts/issues"
  },
  "homepage": "https://github.com/Elbertbiggs360/smsts#readme",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.15",
    "@types/mongoose": "^5.5.6",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.3",
    "jest": "^24.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.11",
    "nodemon": "^1.19.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "devDependencies": {
    "ts-node": "^8.3.0"
  }
}
